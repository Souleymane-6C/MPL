<h1>Profil utilisateur: <%= user.fullName %></h1> 
<table class="table"> 
  <tr> 
    <th>Nom complet</th> 
    <td><%= user.fullName %></td> 
  </tr> 
  <tr> 
    <th>Email</th> 
    <td><%= user.email %></td> 
  </tr> 
  <tr> 
    <th>Code Postal</th> 
    <td><%= user.zipCode %></td> 
  </tr> 
</table> 
 
<% if (user.subscribedAccount) { %> 
<h4>Cet utilisateur est lié à un compte abonné.</h4> 
<% } %> 
 
<% if (user.courses && user.courses.length > 0) { %>
  <h3>Cours auxquels cet utilisateur est inscrit:</h3>
  <ul class="list-group">
    <% user.courses.forEach(course => { %>
      <li class="list-group-item">
        <a href="<%= `/courses/${course._id}` %>"><%= course.title %></a>
        - <%= course.description %>
      </li>
    <% }); %>
  </ul>
<% } else { %>
  <h3>Cet utilisateur n'est inscrit à aucun cours pour le moment.</h3>
<% } %>
<div class="button-group"> 
  <a href="/users" class="btn btn-primary">Tous les utilisateurs</a> 
  <a href="<%= `/users/${user._id}/edit` %>" class="btn btn-info">Modifier</a> 
  <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"  
     onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur?')"       class="btn btn-danger"> 
    Supprimer 
  </a> 
</div> 
