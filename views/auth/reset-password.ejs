<div class="auth-form">
    <h2>RÃ©initialiser le mot de passe</h2>
    <% if (flashMessages) { %>
      <% if (flashMessages.error) { %>
        <div class="flash error"><%= flashMessages.error %></div>
      <% } %>
    <% } %>
    <form action="/reset-password/<%= token %>" method="POST">
      <div class="form-group">
        <label for="inputPassword">Nouveau mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" 
               placeholder="Nouveau mot de passe" required>
      </div>
      <div class="form-group">
        <label for="inputConfirmPassword">Confirmer le mot de passe</label>
        <input type="password" name="confirmPassword" id="inputConfirmPassword" class="form-control" 
               placeholder="Confirmer le mot de passe" required>
      </div>
      <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
    </form>
  </div>